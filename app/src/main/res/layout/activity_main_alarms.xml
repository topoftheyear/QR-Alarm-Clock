<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainAlarms">

    <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    >

        <GridLayout
                android:id="@+id/mainGrid"
                android:columnCount="1"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_weight="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
        >

            <!--Card where Alarm should go-->
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
            >
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                    <TextView
                            android:id="@+id/textView5"
                            android:text="X:XX"
                            android:textColor="@android:color/white"
                            android:textSize="42sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="95dp"
                            android:layout_toStartOf="@+id/switch1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"/>

                    <Switch
                            android:id="@+id/switch1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:checked="true"
                            android:textAllCaps="false"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="32dp"
                            app:layout_constraintTop_toTopOf="parent"/>


                    <!-- Days -->
                    <TextView
                            android:id="@+id/daySun"
                            android:text="Sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/dayNotSelected"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
                    <TextView
                            android:id="@+id/dayMon"
                            android:text="Mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/daySelected"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"
                            app:layout_constraintStart_toEndOf="@+id/daySun"
                            android:layout_marginStart="4dp"/>
                    <TextView
                            android:id="@+id/dayTues"
                            android:text="Tues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/daySelected"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"
                            app:layout_constraintStart_toEndOf="@+id/dayMon"
                            android:layout_marginStart="4dp"/>
                    <TextView
                            android:id="@+id/dayWeds"
                            android:text="Weds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/daySelected"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"
                            app:layout_constraintStart_toEndOf="@+id/dayTues"
                            android:layout_marginStart="4dp"/>
                    <TextView
                            android:id="@+id/dayThur"
                            android:text="Thur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/daySelected"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"
                            app:layout_constraintStart_toEndOf="@+id/dayWeds"
                            android:layout_marginStart="4dp"/>
                    <TextView
                            android:id="@+id/dayFri"
                            android:text="Fri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/daySelected"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"
                            app:layout_constraintStart_toEndOf="@+id/dayThur"
                            android:layout_marginStart="4dp"/>
                    <TextView
                            android:id="@+id/daySat"
                            android:text="Sat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/dayNotSelected"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"
                            app:layout_constraintStart_toEndOf="@+id/dayFri"
                            android:layout_marginStart="4dp"/>



                </android.support.constraint.ConstraintLayout>



            </android.support.v7.widget.CardView>

        </GridLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>